<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:weightSum="1">

    <include layout="@layout/include_common_header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_18"
        android:id="@+id/idea_edit"
        android:background="@color/white"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:textColor = "@color/black"
        android:textSize="@dimen/text_size_24"
        android:hint="请将您遇到的问题或意见详细描述后反馈给我们，小亿会尽快帮您解决！"
        android:minLines="8"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100/100"
            android:id="@+id/wordnub_text"
            android:padding="@dimen/space_3"
            android:textSize="@dimen/text_size_10"
            android:layout_alignBottom="@+id/idea_edit"
            android:layout_alignRight="@+id/idea_edit"
            android:layout_alignEnd="@+id/idea_edit" />

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/space_18"
        android:layout_marginRight="@dimen/space_18"
        android:text="确认发送"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_32"
        android:background="@drawable/bg_btn"
        android:id="@+id/send_btn" />

</LinearLayout>