<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_7"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/space_5"
        android:layout_toLeftOf="@+id/daohang"
        android:layout_toStartOf="@+id/daohang"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/jyz"
            android:id="@+id/adr_img"
            android:layout_gravity="right|center"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_5"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中石化第28加油站"
                android:textColor="@color/near_listitem_name"
                android:textSize="@dimen/text_size_28"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/space_5"
                android:layout_width="200dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用"
                    android:gravity="center"
                    android:paddingTop="@dimen/space_3"
                    android:paddingRight="@dimen/space_6"
                    android:paddingLeft="@dimen/space_5"
                    android:paddingBottom="@dimen/space_3"
                    android:textColor="@color/white"
                    android:background="@color/near_listitem_ky"
                    android:textSize="@dimen/text_size_18"
                    android:id="@+id/text_state" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_gravity="right"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/text_order"
                    android:textSize="@dimen/text_size_20"
                    android:layout_toLeftOf="@+id/textView42"
                    android:layout_toStartOf="@+id/textView42"
                    android:textColor="@color/near_listitem_dingdan"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单"
                    android:textSize="@dimen/text_size_20"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/textView42"
                    android:textColor="@color/near_listitem_dingdan"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址："
                    android:textSize="@dimen/text_size_24"
                    android:textColor="@color/near_listitem_adr" />

                <TextView
                    android:id="@+id/adr_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="青岛市市北区长春路121号"
                    android:textSize="@dimen/text_size_24"
                    android:textColor="@color/near_listitem_adr"
                    android:maxLines="3"
                    android:ellipsize="end"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_4"
            android:id="@+id/daohang"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/daohang"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2"
                    android:id="@+id/dis_text"
                    android:textColor="@color/near_listitem_ql"
                    android:textSize="@dimen/text_size_23"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"
                    android:textColor="@color/near_listitem_ql"
                    android:textSize="@dimen/text_size_23"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>