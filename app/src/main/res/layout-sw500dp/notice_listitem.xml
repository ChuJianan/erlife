<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/viewbase_onclick"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl"
        >
        <ImageView
            android:id="@+id/cnotice_icon"
            android:paddingBottom="10.0dip"
            android:layout_width="60.0dip"
            android:layout_height="70.0dip"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginTop="10.0dip"
            android:src="@mipmap/notice_item1"
            android:scaleType="fitXY" />
        <TextView android:textSize="@dimen/text_size_13"
            android:textStyle="bold"
            android:textColor="@*android:color/white"
            android:gravity="center"
            android:text="1"
            android:id="@+id/cnotice_num"
            android:background="@drawable/shape_round_red"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_marginLeft="65.0dip"
            android:layout_marginTop="5.0dip"
            android:singleLine="true" />
    </RelativeLayout>

    <ImageView android:background="@mipmap/arrow_right"
        android:layout_width="8.0dip"
        android:layout_height="14.0dip"
        android:layout_marginRight="@dimen/space_15"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <TextView android:textSize="@dimen/text_size_15"
        android:textColor="@color/text_confirm"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/cnotice_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/cnotice_title"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toRightOf="@+id/rl"
        android:layout_toEndOf="@+id/rl"
        android:layout_marginLeft="@dimen/space_10"
        />

    <TextView
        android:textSize="26.0dip"
        android:textColor="@color/black"
        android:gravity="left"
        android:layout_gravity="center_vertical"
        android:id="@+id/cnotice_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="系统消息"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/rl"
        android:layout_toEndOf="@+id/rl"
        android:layout_marginLeft="@dimen/space_10"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-09-12"
        android:textColor="@color/near_listitem_adr"
        android:id="@+id/textView3"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/cnotice_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/space_10"
        />
</RelativeLayout>