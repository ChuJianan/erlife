<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/viewbase_onclick"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/cnotice_icon"
        android:paddingBottom="10.0dip"
        android:layout_width="50.0dip"
        android:layout_height="60.0dip"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginTop="10.0dip"
        android:scaleType="fitXY" />
    <TextView
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/textcolor"
        android:gravity="left"
        android:layout_gravity="center_vertical"
        android:id="@+id/cnotice_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80.0dip"
        android:layout_marginRight="35.0dip"
        android:singleLine="true"
        android:layout_alignTop="@+id/cnotice_icon" />
    <TextView android:textSize="@dimen/text_size_15"
        android:textColor="@color/textcolor3"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/cnotice_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_marginRight="35.0dip"
        android:singleLine="true"
        android:layout_below="@+id/cnotice_title" />
    <TextView android:textSize="@dimen/text_size_13"
        android:textStyle="bold"
        android:textColor="@*android:color/white"
        android:gravity="center"
        android:id="@+id/cnotice_num"
        android:background="@drawable/shape_round_red"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_marginLeft="55.0dip"
        android:layout_marginTop="5.0dip"
        android:singleLine="true" />
    <ImageView android:background="@mipmap/arrow_right"
        android:layout_width="8.0dip"
        android:layout_height="14.0dip"
        android:layout_marginRight="@dimen/space_15"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>