<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/viewbase_onclick"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/cnotice_icon"
        android:paddingBottom="10.0dip"
        android:layout_width="50.0dip"
        android:layout_height="60.0dip"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginTop="10.0dip"
        android:src="@mipmap/notice_item1"
        android:scaleType="fitXY" />
    <TextView
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/black"
        android:gravity="left"
        android:layout_gravity="center_vertical"
        android:id="@+id/cnotice_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80.0dip"
        android:text="系统消息"
        android:singleLine="true"
        android:layout_marginRight="@dimen/space_18"
        android:layout_alignTop="@+id/cnotice_icon"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />
    <TextView android:textSize="@dimen/text_size_15"
        android:textColor="@color/text_confirm"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/cnotice_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80.0dip"
        android:layout_marginTop="5.0dip"
        android:singleLine="true"
        android:layout_below="@+id/cnotice_title"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />
    <TextView android:textSize="@dimen/text_size_13"
        android:textStyle="bold"
        android:textColor="@*android:color/white"
        android:gravity="center"
        android:text="1"
        android:id="@+id/cnotice_num"
        android:background="@drawable/shape_round_red"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_marginLeft="55.0dip"
        android:layout_marginTop="5.0dip"
        android:singleLine="true" />
    <ImageView android:background="@mipmap/arrow_right"
        android:layout_width="8.0dip"
        android:layout_height="14.0dip"
        android:layout_marginRight="@dimen/space_15"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-09-12"
        android:textColor="@color/near_listitem_adr"
        android:layout_marginRight="8dp"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/cnotice_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_above="@+id/cnotice_desc"
        android:gravity="center"
        />
</RelativeLayout>