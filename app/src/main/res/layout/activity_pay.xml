<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1">

    <include layout="@layout/include_common_header_pale"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_10"
        android:paddingTop="@dimen/space_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额"
            android:id="@+id/textView7"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/near_listitem_name"
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100元"
            android:id="@+id/money_text"
            android:textSize="@dimen/text_size_17"
            android:layout_alignBottom="@+id/textView7"
            android:textColor="@color/text_confirm"
            android:layout_marginRight="34dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/imageView31"
        android:src="@mipmap/ic_line"
        android:scaleType="fitXY"
        />

    <com.yrkj.yrlife.widget.RadioGroup
        android:id="@+id/money_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_5"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/space_5"
            android:layout_marginTop="46dp"
            >
            <RadioButton
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="0.01元"
                android:textSize="@dimen/text_size_18"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:id="@+id/t_2_radio"
                android:button="@null"
                android:textColor="@color/color_radiobutton"
                />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="50元"
                android:layout_marginLeft="@dimen/space_18"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/t_5_radio"
                android:button="@null"
                android:textColor="@color/color_radiobutton"
                 />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="100元"
                android:layout_marginLeft="@dimen/space_18"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/t_10_radio"
                android:button="@null"
                android:textColor="@color/color_radiobutton"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_5"
            android:padding="@dimen/space_5">
            <RadioButton
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="200元"
                android:button="@null"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:id="@+id/t_20_radio"
                android:textColor="@color/color_radiobutton"
                />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="300元"
                android:layout_marginLeft="@dimen/space_18"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:button="@null"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/t_30_radio"
                android:textColor="@color/color_radiobutton"
                />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="500元"
                android:layout_marginLeft="@dimen/space_18"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:button="@null"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/t_50_radio"
                android:textColor="@color/color_radiobutton"
                />
        </LinearLayout>




    </com.yrkj.yrlife.widget.RadioGroup>



    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="立即充值"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:id="@+id/pay_btn"
        android:background="@drawable/bg_btn"
        android:layout_gravity="center"
        android:layout_marginTop="71dp"
        />

</LinearLayout>