<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:weightSum="1">

    <include layout="@layout/include_common_header"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView30"
        android:src="@mipmap/ic_line" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center|top"
        android:paddingBottom="@dimen/space_10"
        android:paddingTop="@dimen/space_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_size_15"
            android:id="@+id/user_name_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/phone_text"
            android:paddingLeft="@dimen/space_10"
            android:textSize="@dimen/text_size_15"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/user_name_text"
            android:layout_toEndOf="@+id/user_name_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额："
            android:id="@+id/textView7"
            android:textSize="@dimen/text_size_13"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/user_name_text"
            android:layout_alignStart="@+id/user_name_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100元"
            android:id="@+id/money_text"
            android:textSize="@dimen/text_size_13"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:id="@+id/imageView31"
        android:src="@mipmap/ic_line" />

    <RadioGroup
        android:id="@+id/pay_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/space_8">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobutton_weixin"
            android:id="@+id/weixin_radio"
            android:background="@color/white"
            android:layout_marginRight="@dimen/space_10"/>

        <RadioButton
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radiobutton"
            android:id="@+id/zhifubao_radio"
            android:layout_marginLeft="@dimen/space_10"/>
    </RadioGroup>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:id="@+id/imageView32"
        android:src="@mipmap/ic_line"/>

    <com.yrkj.yrlife.widget.RadioGroup
        android:id="@+id/money_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_5"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/space_5"
            >
            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="20元"
                android:textSize="@dimen/text_size_15"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:id="@+id/t_2_radio"
                android:button="@null"
                />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="50元"
                android:layout_marginLeft="@dimen/space_15"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/t_5_radio"
                android:button="@null"
                 />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="100元"
                android:layout_marginLeft="@dimen/space_15"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/t_10_radio"
                android:button="@null"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/space_5">
            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="200元"
                android:button="@null"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/t_20_radio" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="300元"
                android:layout_marginLeft="@dimen/space_15"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:button="@null"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/t_30_radio" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="500元"
                android:layout_marginLeft="@dimen/space_15"
                android:background="@drawable/radio_money"
                android:gravity="center"
                android:button="@null"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/t_50_radio" />
        </LinearLayout>




    </com.yrkj.yrlife.widget.RadioGroup>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@mipmap/ic_line"
        android:id="@+id/imageView33" />

    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="立即充值"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:id="@+id/pay_btn"
        android:background="@drawable/bg_btn_head"
        android:layout_gravity="center"
        />

</LinearLayout>