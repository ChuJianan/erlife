<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="20.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_10"
        >

        <TextView
            android:id="@+id/titles"
            style="@style/text_18_ffffff"
            android:layout_width="fill_parent"
            android:layout_height="62.0dip"
            android:gravity="left|center"
            android:paddingLeft="@dimen/space_8"
            android:text="提示"
            android:visibility="visible" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:src="@mipmap/ic_line"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:paddingTop="@dimen/space_5"
            >
            <TextView
                android:text="版本:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/quan_text_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.5"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/quan_text_color"
                android:id="@+id/code"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_8"
            android:paddingTop="@dimen/space_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包大小："
                android:textColor="@color/quan_text_color"
                android:textSize="@dimen/text_size_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21.4MB"
                android:textColor="@color/quan_text_color"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/package_size"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_8"
            android:paddingTop="@dimen/space_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新时间："
                android:textColor="@color/quan_text_color"
                android:textSize="@dimen/text_size_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-06-15 16:33"
                android:textColor="@color/quan_text_color"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/date"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_8"
            android:paddingTop="@dimen/space_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新说明："
                android:textColor="@color/list_item_title_color"
                android:textSize="@dimen/text_size_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88888"
                android:textColor="@color/list_item_title_color"
                android:textSize="@dimen/text_size_15"
                android:id="@+id/message"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="center|bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/positiveButton"
                style="@style/text_15_ffffff_sdw"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:background="@color/white"
                android:gravity="center"
                android:text="下次再说" />

            <Button
                android:id="@+id/negativeButton"
                style="@style/text_15_666666_sdw"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:background="@color/white"
                android:gravity="center"
                android:text="立即更新" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>