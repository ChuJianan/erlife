<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_7"
            android:layout_marginLeft="@dimen/space_7"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/space_5"
            android:layout_toLeftOf="@+id/daohang"
            android:layout_toStartOf="@+id/daohang"
            android:gravity="center">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/jyz"
                android:id="@+id/wash_item_pic"
                android:scaleType="fitXY"
                android:layout_gravity="right|center"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_8"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中石化第28加油站"
                    android:textColor="@color/near_listitem_name"
                    android:textSize="@dimen/text_size_15"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/space_5"
                    />

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/space_5"
                    android:layout_width="200dp"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_centerVertical="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="忙碌"
                        android:gravity="center"
                        android:paddingTop="@dimen/space_3"
                        android:paddingRight="@dimen/space_6"
                        android:paddingLeft="@dimen/space_5"
                        android:paddingBottom="@dimen/space_3"
                        android:textColor="@color/white"
                        android:background="@drawable/textview_border_m"
                        android:textSize="@dimen/text_size_11"
                        android:id="@+id/text_state" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共"
                        android:layout_centerVertical="true"
                        android:id="@+id/text123"
                        android:layout_toLeftOf="@+id/wash_item_nub"
                        android:layout_toStartOf="@+id/wash_item_nub"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/near_listitem_dingdan"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/wash_item_nub"
                        android:textSize="@dimen/text_size_12"
                        android:layout_toLeftOf="@+id/textView42"
                        android:layout_toStartOf="@+id/textView42"
                        android:textColor="@color/near_listitem_dingdan"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单"
                        android:textSize="@dimen/text_size_12"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/space_8"
                        android:layout_marginEnd="@dimen/space_8"
                        android:id="@+id/textView42"
                        android:textColor="@color/near_listitem_dingdan"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_3"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    >

                    <TextView
                        android:id="@+id/adr_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="青岛市市北区长春路121号"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/near_listitem_adr"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginBottom="@dimen/space_5"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_4"
            android:id="@+id/daohang"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_putongjiantou"
                />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>