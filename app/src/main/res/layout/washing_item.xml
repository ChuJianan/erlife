<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_13"
    android:paddingLeft="@dimen/space_13"
    android:paddingTop="@dimen/space_13">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wash_item_pic"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:scaleType="fitXY"
            android:src="@mipmap/weixin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_22"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wash_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:singleLine="true"
                android:text="青岛国际工艺品城斯科达洗车机网点"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="洗车进行中..."
                android:textColor="#fb5e5e"
                android:textSize="@dimen/text_size_14"
                android:layout_marginTop="@dimen/space_18"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_21"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共"
                    android:textColor="@color/shop_item"
                    android:textSize="@dimen/space_13" />

                <TextView
                    android:id="@+id/wash_item_nub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="91"
                    android:textColor="@color/shop_item"
                    android:textSize="@dimen/space_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单"
                    android:textColor="@color/shop_item"
                    android:textSize="@dimen/space_13" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_25"
        android:src="@mipmap/arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_16"
        />

</RelativeLayout>