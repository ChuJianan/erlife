<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:padding="20.0dip"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/graywhite"
        android:orientation="vertical"
        android:layout_gravity="top"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pay_dialog_top"
            android:padding="@dimen/space_15"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择支付方式"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/space_2"
            android:padding="@dimen/space_15"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_5"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_balance"
                    android:layout_gravity="center"
                    />

                <CheckedTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="余额支付"
                    android:textSize="@dimen/text_size_16"
                    android:gravity="center"
                    android:drawableRight="@drawable/pay_check"
                    android:layout_marginLeft="@dimen/space_6"
                    android:layout_gravity="center"
                    android:id="@+id/pay_balance"

                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:src="@mipmap/ic_line"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_5"
                android:id="@+id/rl_discount"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_discount"
                    android:layout_gravity="center"
                    />
                <CheckedTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="优惠券支付"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawableRight="@drawable/pay_check"
                    android:layout_marginLeft="@dimen/space_6"
                    android:id="@+id/pay_discount"
                    android:checked="true"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:src="@mipmap/ic_line"
                android:scaleType="fitXY"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pay_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/space_8"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即支付"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/paycolor"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>