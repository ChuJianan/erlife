<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    >

    <include layout="@layout/include_common_header"
        android:id="@+id/include" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:paddingLeft="@dimen/space_20"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            android:orientation="horizontal"
            android:layout_below="@+id/relativeLayout4"
            android:layout_alignLeft="@+id/relativeLayout4"
            android:layout_alignStart="@+id/relativeLayout4"
            android:layout_marginTop="25dp"
            android:paddingLeft="@dimen/space_7"
            android:background="@color/white">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView2"
                android:src="@mipmap/yanzhengma"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <com.yrkj.yrlife.widget.ClearEditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/yzm"
                android:hint="请输入验证码"
                android:textSize="@dimen/text_size_14"
                android:background="@color/white"
                android:layout_centerVertical="true" />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="获取验证码"
                android:id="@+id/hq_code"
                android:layout_marginLeft="28dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_code"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout4"
            android:paddingLeft="@dimen/space_5"
            android:background="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >

            <com.yrkj.yrlife.widget.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/phonenub"
                android:hint="请输入手机号"
                android:textSize="@dimen/text_size_14"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/space_5"
                android:maxLength="11"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView"
                android:src="@mipmap/phone"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout5"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/space_5"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignLeft="@+id/relativeLayout3"
            android:layout_alignStart="@+id/relativeLayout3">

            <com.yrkj.yrlife.widget.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/username"
                android:hint="请输入用户名"
                android:textSize="@dimen/text_size_14"
                android:background="@color/white"

                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView3"
                android:src="@mipmap/ic_yonghuming"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout6"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/space_5"
            android:layout_below="@+id/relativeLayout5"
            android:layout_alignLeft="@+id/relativeLayout5"
            android:layout_alignStart="@+id/relativeLayout5">

            <com.yrkj.yrlife.widget.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/pwd"
                android:inputType="textPassword"
                android:hint="请输入密码（字母和数字的组合）"
                android:textSize="@dimen/text_size_14"
                android:layout_marginLeft="@dimen/space_5"
                android:background="@color/white"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView4"
                android:src="@mipmap/mima"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:id="@+id/signbtn"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_code"
            android:textSize="@dimen/text_size_20"
            android:layout_below="@+id/relativeLayout6"
            android:layout_alignLeft="@+id/relativeLayout6"
            android:layout_alignStart="@+id/relativeLayout6"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/relativeLayout6"
            android:layout_alignEnd="@+id/relativeLayout6" />


    </RelativeLayout>

</RelativeLayout>
