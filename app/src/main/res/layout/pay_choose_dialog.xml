<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/graywhite"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:gravity="center|left"
            android:padding="@dimen/space_3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="请选择支付方式"
                android:textSize="@dimen/text_size_15"
                android:layout_marginLeft="@dimen/space_15"
                android:textColor="@color/shop_item"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:src="@mipmap/ic_line_9"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <RelativeLayout
                android:id="@+id/wx_rl"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/space_4"
                >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/ic_pay_wx1"
                    android:layout_marginLeft="@dimen/space_15"
                    android:id="@+id/imageView"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/text_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:src="@mipmap/cur_right"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:src="@mipmap/ic_line"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                />
            <RelativeLayout
                android:id="@+id/zfb_rl"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/space_2"
                android:background="@color/white"
                android:padding="@dimen/space_4"
                >
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/pay_zfb"
                    android:layout_marginLeft="@dimen/space_15"
                    android:id="@+id/imageView3"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝支付"
                    android:textSize="@dimen/text_size_17"
                    android:textColor="@color/text_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_toEndOf="@+id/imageView3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:src="@mipmap/cur_right"
                    android:id="@+id/imageView4"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:src="@mipmap/ic_line_9"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:id="@+id/cancel_rl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/space_3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/shop_item"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>