<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_common_header"/>

    <com.yrkj.yrlife.widget.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/space_30"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:padding="@dimen/space_3"
        android:textSize="@dimen/text_size_15"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:id="@+id/password"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支持英文字母及数字，限6-16位字符"
        android:textSize="@dimen/space_12"
        android:layout_marginLeft="@dimen/space_25"
        />
    <com.yrkj.yrlife.widget.ClearEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请再次输入密码"
        android:padding="@dimen/space_3"
        android:inputType="textPassword"
        android:textSize="@dimen/text_size_15"
        android:background="@color/white"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:id="@+id/passwordt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支持英文字母及数字，限6-16位字符"
        android:textSize="@dimen/space_12"
        android:layout_marginLeft="@dimen/space_25"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确认"
        android:textSize="@dimen/text_size_22"
        android:textColor="@color/white"
        android:id="@+id/sign_btn"

        android:layout_marginTop="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:background="@drawable/bg_btn_code"
        />
</LinearLayout>