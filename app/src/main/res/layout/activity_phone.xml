<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical">

    <include layout="@layout/include_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_15">

        <com.yrkj.yrlife.widget.ClearEditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:hint="请输入新手机号码"
            android:paddingLeft="@dimen/space_5"
            android:layout_marginTop="@dimen/space_25"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_15">

            <com.yrkj.yrlife.widget.ClearEditText
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:hint="请输入验证码"
                android:paddingLeft="@dimen/space_5"
                android:id="@+id/code_edit"
                />
            <Button
                android:id="@+id/code_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_btn_code"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/space_15"
                />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_btn_code"
            android:text="提  交"
            android:textColor="@color/white"
            android:id="@+id/sign_btn"
            android:layout_marginTop="@dimen/space_15"
            />
    </LinearLayout>
</LinearLayout>