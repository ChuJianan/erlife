<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/space_13"
    android:id="@+id/idea"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/img68"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/icon_yijianxiang" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_toEndOf="@+id/img68"
            android:layout_toRightOf="@+id/img68"
            android:text="意见箱"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_yijianxiangshuxie"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/img69"
                />
    </RelativeLayout>
    <ImageView
        android:id="@+id/banner_hiuyuankafuwu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/banner_yijianxiang"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/space_13"
        />

</LinearLayout>