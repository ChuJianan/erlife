<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graywhite"
    >

    <include layout="@layout/include_common_header" />
    <com.yrkj.yrlife.widget.SlideShowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:adjustViewBounds="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/space_10"
        android:gravity="center|left"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_line_blue"
        android:layout_marginLeft="@dimen/space_10"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备信息"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/near_detail_title"
            android:layout_marginLeft="@dimen/space_10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/space_1"
        android:padding="@dimen/space_10"
        >
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称："
                    android:textColor="@color/near_listitem_adr"
                    android:textSize="@dimen/text_size_15"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="泰山石化39站"
                    android:textColor="@color/near_listitem_adr"
                    android:textSize="@dimen/text_size_15"
                    android:id="@+id/detail_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备编号："
                    android:textColor="@color/near_listitem_adr"
                    android:textSize="@dimen/text_size_15"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999991"
                    android:textColor="@color/near_listitem_adr"
                    android:textSize="@dimen/text_size_15"
                    android:id="@+id/detail_nub"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经度坐标："
                    android:textColor="@color/near_listitem_adr"
                    android:textSize="@dimen/text_size_15"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="117.082116"
                    android:textColor="@color/near_listitem_adr"
                    android:textSize="@dimen/text_size_15"
                    android:id="@+id/detail_lng"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纬度坐标："
                    android:textColor="@color/near_listitem_adr"
                    android:textSize="@dimen/text_size_15"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36.204513"
                    android:textColor="@color/near_listitem_adr"
                    android:textSize="@dimen/text_size_15"
                    android:id="@+id/detail_lat"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址："
                    android:textColor="@color/near_listitem_adr"
                    android:textSize="@dimen/text_size_15"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="泰安市东岳大街泰山石化39站"
                    android:textColor="@color/near_listitem_adr"
                    android:textSize="@dimen/text_size_15"
                    android:id="@+id/detail_adr"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_eweima"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/space_10"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/space_5"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_line_blue"
            android:layout_marginLeft="@dimen/space_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/near_detail_title"
            android:layout_marginLeft="@dimen/space_10"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1"
        android:background="@color/white"
        android:padding="@dimen/space_10"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="泰安市东岳大街泰山石化39站"
            android:textColor="@color/near_listitem_adr"
            android:textSize="@dimen/text_size_15"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_centerVertical="true"
            android:id="@+id/detail_adrs"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_curr_right_detail"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/space_10"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/space_5"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_line_blue"
            android:layout_marginLeft="@dimen/space_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/near_detail_title"
            android:layout_marginLeft="@dimen/space_10"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1"
        android:background="@color/white"
        android:padding="@dimen/space_10"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4001891668"
            android:textColor="@color/near_listitem_adr"
            android:textSize="@dimen/text_size_15"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_centerVertical="true"
            android:id="@+id/detail_tel"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_curr_right_detail"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>