<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.yrkj.yrlife.widget.SlideShowView
                android:id="@+id/slideshowView"
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@color/white" />


            <com.yrkj.yrlife.widget.MyGridView
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/white"
                android:columnWidth="90dp"
                android:gravity="center"
                android:numColumns="4"
                android:paddingTop="@dimen/space_5"
                android:scrollbars="none"
                android:stretchMode="columnWidth" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_marginRight="@dimen/space_4"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_line" />

            <LinearLayout
                android:id="@+id/c_ll"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_10"
                >
                        <com.yrkj.yrlife.widget.MarqueeView
                            android:id="@+id/mv_bar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:singleLine="true"
                            app:mvAnimDuration="1000"
                            app:mvInterval="3000"
                            app:mvTextColor="@color/quan_text_color"
                            app:mvTextSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_line" />

            <include layout="@layout/fragment_index_center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_line" />

            <com.yrkj.yrlife.widget.CustomListView
                android:id="@+id/other_list"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/empty_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="正在加载中..."
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_19"
                android:visibility="gone" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_line" />
            <com.yrkj.yrlife.widget.CustomListView
                android:id="@+id/washing_list"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/sleep_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/pic_sleep"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_line" />
            <com.yrkj.yrlife.widget.PullToRefreshCustomListView
                android:id="@+id/rate_list"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>
