<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <com.yrkj.yrlife.widget.SlideShowView
                android:id="@+id/slideshowView"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true" />

            <com.yrkj.yrlife.widget.MyGridView
                android:paddingTop="@dimen/space_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/grid"
                android:columnWidth="90dp"
                android:verticalSpacing="@dimen/space_5"
                android:numColumns="4"
                android:cacheColorHint="@color/white"
                android:scrollbars="none"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@mipmap/ic_line"
                android:scaleType="fitXY"
                />
            <com.yrkj.yrlife.widget.MyGridView
                android:paddingTop="@dimen/space_5"
                android:paddingBottom="@dimen/space_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/grid_b"
                android:columnWidth="60dp"
                android:verticalSpacing="@dimen/space_5"
                android:numColumns="6"
                android:cacheColorHint="@color/white"
                android:scrollbars="none"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@mipmap/ic_line"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/graywhite"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/b_xicheka"
                    android:layout_marginRight="@dimen/space_1"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/b_xinshou"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/b_jfien"
                    android:layout_marginLeft="@dimen/space_1"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@mipmap/ic_line"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/xinshou_line"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/space_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特惠"
                        android:textColor="@color/paycolor"
                        android:textSize="@dimen/text_size_18"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/space_2"
                        >

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="24dp"
                            android:src="@drawable/text_bg"
                            android:scaleType="fitXY"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="头条"
                            android:layout_marginLeft="@dimen/space_1"
                            android:textSize="@dimen/space_18"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="21dp"
                        android:src="@mipmap/ic_line"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/space_8"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商城限时半价商品，等你来"
                            android:textColor="@color/quan_text_color"
                            android:id="@+id/textView36"
                            android:textSize="@dimen/text_size_15"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="35dp"
                            android:layout_marginStart="35dp" />


                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="18dp"
                            android:src="@mipmap/right_d_curr"
                            android:layout_alignTop="@+id/textView36"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/space_15"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:src="@mipmap/ic_line"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/graywhite"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/banner_c"
                    android:id="@+id/imageView6"
                     />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@mipmap/ic_line"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/space_5"
                android:background="@color/xinshou_bg"
                android:layout_marginRight="@dimen/space_3"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView38"
                    android:src="@mipmap/xinshou_line"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="福利商城"
                    android:id="@+id/textView14"
                    android:layout_marginLeft="@dimen/space_6"
                    android:textColor="@color/xinshou"
                    android:textSize="@dimen/text_size_16"
                    android:layout_gravity="center"
                    android:padding="@dimen/space_3"
                    />
            </LinearLayout>

            <com.yrkj.yrlife.widget.MyGridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shop_gridView"
                android:horizontalSpacing="0.0dip"
                android:listSelector="@null"
                android:columnWidth="120dp"
                android:numColumns="3"
                android:cacheColorHint="@color/white"
                android:scrollbars="none"
                android:gravity="center"
                android:paddingTop="@dimen/space_5"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0.0dip"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
