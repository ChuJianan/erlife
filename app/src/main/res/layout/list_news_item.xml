<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="@dimen/space_15"
        android:paddingTop="@dimen/space_5"
        android:paddingBottom="@dimen/space_1"
        android:paddingRight="@dimen/space_8"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/nav_image_news"
            android:src="@mipmap/notice_item1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/nav_image_news"
            android:layout_toEndOf="@+id/nav_image_news"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginRight="@dimen/space_3"
            android:padding="@dimen/space_2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/title_news"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size_14"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/data_news"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/text_size_12"
                android:paddingTop="@dimen/space_1"
                android:paddingBottom="@dimen/space_1"
                />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="简介/概要/摘要"
                android:id="@+id/outline_news"
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/text_size_12"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingTop="@dimen/space_3"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView47"
            android:src="@mipmap/arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>