<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_common_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_18"
            android:id="@+id/rate_edit"
            android:background="@color/white"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:textColor = "@color/black"
            android:textSize="@dimen/text_size_14"
            android:hint="请填写您的评价"
            android:minLines="8"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100/100"
            android:id="@+id/wordnub_text"
            android:padding="@dimen/space_3"
            android:textSize="@dimen/text_size_10"
            android:layout_alignBottom="@+id/rate_edit"
            android:layout_alignRight="@+id/rate_edit"
            android:layout_alignEnd="@+id/rate_edit" />

    </RelativeLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_20"
        android:stepSize="1"
        android:id="@+id/rate"
        style="@style/MyRatingBar"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="提交"
        android:id="@+id/rate_btn"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/text_size_14"
        android:background="@drawable/bg_btn_code"
        android:textColor="@color/white"
        />

</LinearLayout>